%h2
  Sign up
=form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  =devise_error_messages!
  %p= f.label :email
  = f.email_field :email, :autofocus => true
  %p= f.label :password
  = f.password_field :password
  %p= f.label :password_confirmation
  = f.password_field :password_confirmation
  = f.fields_for(:userinfo_attributes) do |u|
    %p= u.label :address
    = u.text_field :address
    %p= u.label :city
    = u.text_field :city
    %p= u.label :state
    = u.text_field :state
    %p= u.label :country
    = u.text_field :country
    %p= u.label :birthday
    = u.text_field :bday
    %p= u.label :full_name
    = u.text_field :full_name
    %p= u.label :zipcode
    = u.text_field :zip
    %p= u.label :login
    = u.text_field :login
  %br=f.submit "Sign up"



