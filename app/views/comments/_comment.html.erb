

<% @advertisement.comment.each do |comment| %>

<div class='comment<%= "#{comment.id}"%>'>
<p><%= comment.content %></p>
<% if can? :update, comment %>
<%= link_to "edit", [@advertisement,comment]%>
<% end %>
<% if can? :destroy, comment %>
<%= link_to "delete",[@advertisement,comment],:method=>:delete,:remote=> true %>
<% end %>
<br />
</div>

<%end%>



