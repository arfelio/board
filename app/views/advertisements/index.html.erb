<h1>Advertisements#index</h1>
<p>Find me in app/views/advertisements/index.html.erb</p>
<%= link_to "new advertisement", new_advertisement_path %>
<% @advertisements.each do |advertisement| %>
<div>
<p><%= advertisement.author %></p>
<p><%= advertisement.content %></p>
<%= image_tag advertisement.image.thumb.url %>
<%= link_to "Delete", advertisement_path(advertisement),:method=>:delete%>
<%= link_to "Edit", edit_advertisement_path(advertisement)%>
<%= link_to "Show", advertisement_path(advertisement)%>
</div>
<% end %>
