%div.container
  %h1 Advertisements

  = link_to "Create new advertisement", new_advertisement_path
  = will_paginate @advertisements
  - @advertisements.each do |advertisement|

    %p= advertisement.author
    %div.thumbtext= advertisement.content.slice(0,160)
    = image_tag advertisement.image.thumb.url
    %br
    - if can? :destroy, advertisement
      = link_to "Delete", advertisement_path(advertisement),:method=>:delete
    - if can? :update, advertisement
      = link_to "Edit", edit_advertisement_path(advertisement)
    = link_to "Show", advertisement_path(advertisement)


