%h4 Categories
%ul.nav.nav-stacked.nav-pills
  %li{:class=>"#{'active' unless params[:category_id]}"}= link_to "All", advertisements_path
  - @categories.each do |category|
    %li{:class=>"#{category.id.to_s == params[:category_id] ? 'active' : ''}"}= link_to category.title, advertisements_path(:category_id => category.id)